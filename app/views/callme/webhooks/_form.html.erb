<%= form_with(model: callme_webhook, class: "contents") do |form| %>
  <% if callme_webhook.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(callme_webhook.errors.count, "error") %> prohibited this callme_webhook from being saved:</h2>
      <ul>
        <% callme_webhook.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :hook_type %>
    <%= form.select :hook_type, Callme::Webhook.hook_types.map { [_1[0], _1[0]] }, {}, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :fanout_type %>
    <%= form.select :fanout_type, Callme::Webhook.fanout_types.map { [_1[0], _1[0]] }, {}, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :fanout_config %>
    <%= form.text_area :fanout_config, rows: 5, class: "w-full" %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
